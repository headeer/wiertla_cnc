<!doctype html>
<html class="no-js supports-no-cookies" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_accent }}">
    <link rel="canonical" href="{{ canonical_url }}">
    {%- if shop.published_locales.size > 1 -%}
      {%- for loc in shop.published_locales -%}
        <link rel="alternate" hreflang="{{ loc.iso_code }}" href="{{ canonical_url | within: loc }}">
      {%- endfor -%}
      <link rel="alternate" hreflang="x-default" href="{{ canonical_url }}">
    {%- endif -%}
    <link
      rel="preconnect"
      href="https://fonts.shopifycdn.com"
      crossorigin>
    <link
      rel="preconnect"
      href="https://cdn.shopify.com"
      crossorigin>
    <link
      rel="preconnect"
      href="https://fonts.shopify.com"
      crossorigin>
    <link rel="preconnect" href="https://monorail-edge.shopifysvc.com">

      <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=League+Spartan:wght@400;700&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">

    {%- liquid
      assign body_font = settings.font_body
      assign heading_font = settings.font_heading
      assign body_font_bolder = body_font | font_modify: 'weight', 'bolder'
      assign body_font_bold = body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
  -%}

    {% comment %}theme-check-disable UndefinedObject{% endcomment %}
    {{ preload_tags }}
    {% comment %}theme-check-enable UndefinedObject{% endcomment %}

    {%- if settings.favicon != blank -%}
      <link
        rel="shortcut icon"
        href="{{ settings.favicon | img_url: '32x32' }}"
        type="image/png">
    {%- endif -%}

    {%- capture seo_title -%}
    {%- if template == 'index' -%}
      wiertla cnc - Markowe wiertła CNC w super cenie
    {%- else -%}
      {{ page_title }}
    {%- endif -%}
    {%- if current_tags -%}
      {%- assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}
    {%- endif -%}
    {%- if current_page != 1 -%}
      &ndash; {{ 'general.meta.page' | t: page: current_page }}
    {%- endif -%}
    {%- if template == 'password' -%}
      {{ shop.name }}
    {%- elsif template != 'index' -%}
      {%- unless page_title contains 'wiertła cnc' -%}
        &ndash; wiertła cnc
      {%- endunless -%}
    {%- endif -%}
  {%- endcapture -%}
    <title>{{ seo_title | strip }}</title>

    {%- if page_description -%}
      <meta name="description" content="{{ page_description | escape }}">
    {%- else -%}
      {%- if request.page_type == 'product' -%}
        <meta name="description" content="{{ product.description | strip_html | truncate: 160 | escape }}">
      {%- elsif request.page_type == 'collection' -%}
        <meta name="description" content="{{ collection.description | strip_html | truncate: 160 | escape }}">
      {%- elsif request.page_type == 'article' -%}
        <meta name="description" content="{{ article.excerpt_or_content | strip_html | truncate: 160 | escape }}">
      {%- else -%}
        <meta name="description" content="{{ shop.meta_description | default: shop.description | strip_html | truncate: 160 | escape }}">
      {%- endif -%}
    {%- endif -%}

    <script src="{{ 'wiertla-init.js' | asset_url }}" defer></script>

    <!-- Start IE11 compatibility -->
    <script src="{{ 'wiertla-ie11-compat.js' | asset_url }}" defer></script>
    <!-- End IE11 compatibility -->
    {% render 'css-variables' %}
    <style>
      @keyframes marquee {
        0% {
          transform: translateX(0);
          -webkit-transform: translateX(0);
        }
        100% {
          transform: translateX(-100%);
          -webkit-transform: translateX(-100%);
        }
      }
    </style>
    {% render 'critical-css' %}
    {% render 'social-meta-tags' %}
    {% render 'breadcrumbs-jsonld' %}
  {% render 'style-tags'
    , layout: 'theme' %}

    <!-- Theme styles -->
    {{ 'theme.css' | asset_url | stylesheet_tag }}
  {{ 'letter-spacing-rules.css' | asset_url | stylesheet_tag }}

    <!-- Wiertla Custom Styles -->
  {{ 'custom-styles.css' | asset_url | stylesheet_tag }}

    <!-- Wiertla Global Design Tokens (buttons, cards, etc.) -->
    {% render 'wiertla-styles' %}

    <!-- Wiertla Categories Global Styles -->
    {{ 'wiertla-categories-global.css' | asset_url | stylesheet_tag }}

    <!-- Wiertla Desktop Modals Styles -->
    {{ 'wiertla-modals-desktop.css' | asset_url | stylesheet_tag }}

    <script src="{{ 'wiertla-theme-config.js.liquid' | asset_url }}" defer></script>
    {% if template contains 'customers' %}
      <script src="{{ "shopify_common.js" | shopify_asset_url }}" defer="defer"></script>
    {% endif %}

    <style>
      {{ heading_font | font_face: font_display: 'swap' }}
      {{ body_font | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_bolder | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}
    </style>

    {% render 'script-tags'
      , layout: 'theme' %}

    {{ content_for_header }}
    {% render 'judgeme_core' %}

    <!-- Organization JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": {{ shop.name | json }},
      "url": {{ shop.url | json }},
      "logo": {{ settings.favicon | img_url: '180x180' | prepend: 'https:' | json }},
      "sameAs": [
        {% if settings.social_facebook_link %}{{ settings.social_facebook_link | json }}{% endif %}{% if settings.social_instagram_link %},{% endif %}
        {% if settings.social_instagram_link %}{{ settings.social_instagram_link | json }}{% endif %}
      ]
    }
    </script>

    <!-- Translation System -->
    <script src="{{ 'translations.js' | asset_url }}" defer></script>
    <script src="{{ 'translation-system.js' | asset_url }}" defer></script>
    <script src="{{ 'section-translators.js' | asset_url }}" defer></script>
    <script src="{{ 'wiertla-translate-init.js' | asset_url }}" defer></script>
  </head>

  <body id="{{ page_title | handle }}" class="template-{{ template.name | handle }} {% if settings.buttons_show_arrow %}show-button-arrows{% endif %}">
    {%- comment -%} Robots: noindex for low-value/system pages {%- endcomment -%}
    {%- if request.page_type == 'search' or request.page_type == 'cart' or request.page_type contains 'customers' or request.page_type == '404' -%}
      <meta name="robots" content="noindex, nofollow">
    {%- endif -%}
    <a class="in-page-link skip-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>
    {%- liquid
      section 'sidebar'
      if settings.ajax_cart_method == 'drawer'
        render 'cart-drawer'
      endif
      render 'availability-drawer'
      section 'announcement-bar'
    -%}
    <div class="relative">
      {% if template.name == 'index' %}
        <div id="sticky-positioner"></div>
      {% endif %}
      {% section 'header' %}
      <main role="main" id="MainContent">
        {{ content_for_layout }}
      </main>
      {% section 'footer' %}
    </div>
    {% section 'popup' %}

    <div
      id="screenreader-announce"
      class="visually-hidden"
      aria-live="polite"
      role="status"></div>

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'general.accessibility.refresh_page' | t }}</li>
      <li id="a11y-selection-message">{{ 'general.accessibility.selection_help' | t }}</li>
    </ul>

    
    {% include 'uploadkit' %}
    <script src="{{ 'wiertla-latest-flag.js' | asset_url }}" defer></script>
    <script src="{{ 'wiertla-fullscreen.js' | asset_url }}" defer></script>
    <script src="{{ 'wiertla-modals.js' | asset_url }}" defer></script>
    <script src="{{ 'wiertla-debug.js' | asset_url }}" defer></script>
  </body>
</html>