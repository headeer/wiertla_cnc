{
  "name": "wiertla_cnc_shopify",
  "version": "1.0.0",
  "description": "Wiertla CNC Shopify Theme",
  "scripts": {
    "dev": "shopify theme dev",
    "pull": "shopify theme pull",
    "push": "shopify theme push",
    "check": "shopify theme check",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:visual": "playwright test tests/visual",
    "test:performance": "lighthouse-ci",
    "test:a11y": "playwright test tests/accessibility",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@axe-core/playwright": "^4.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "@lhci/cli": "^0.12.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/config/jest.setup.js"],
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.js",
      "<rootDir>/tests/integration/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/**/*.js",
      "sections/**/*.liquid",
      "snippets/**/*.liquid",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": ["js", "json"],
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$))"
    ]
  }
}
