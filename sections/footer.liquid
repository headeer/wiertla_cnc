{%- liquid
  assign section_color = 'footer'
  assign locale_selector = false
  assign country_selector = false
  assign grid_cols = 12

  if section.settings.show_country_selector and localization.available_countries.size > 1
    assign country_selector = true
  endif
  if section.settings.show_locale_selector and shop.published_locales.size > 1
    assign locale_selector = true
  endif

  assign show_grid_border = section.settings.show_grid_border
  assign block_count = section.blocks.size | plus: 1
  if section.settings.show_social
    assign block_count = block_count | plus: 1
  endif
  if section.settings.text_text != blank
    assign block_count = block_count | plus: 1
  endif

  case block_count
    when 2
      assign desktop_col_span = 'lg:col-span-6'
    when 3
      assign desktop_col_span = 'lg:col-span-4'
    when 4
      assign desktop_col_span = 'lg:col-span-3'
    when 5
      assign grid_cols = 10
      assign desktop_col_span = 'lg:col-span-2'
  endcase

  assign desktop_grid_class = 'lg:grid-cols-' | append: grid_cols
-%}

<style>
[data-color-scheme="footer"] {
  --color-scheme-accent: var(--color-{{ section.settings.color_scheme }}-accent);
  --color-scheme-text: var(--color-{{ section.settings.color_scheme }}-text);
  --color-scheme-background: var(--color-{{ section.settings.color_scheme }}-background);
  --color-scheme-background-hex: var(--color-{{ section.settings.color_scheme }}-background-hex);
  --color-scheme-meta: var(--color-{{ section.settings.color_scheme }}-meta);
  --color-scheme-text--overlay: var(--color-{{ section.settings.color_scheme }}-text--overlay);
  --color-scheme-accent--overlay: var(--color-{{ section.settings.color_scheme }}-accent--overlay);
  --color-scheme-accent-placeholder: var(--color-{{ section.settings.color_scheme }}-text-placeholder);
}

/* Footer Styles */
.footer__top {
  background-color: #112832;
  color: #F3F4F6;
  padding: 60px 64px;
}

.footer__container {
  max-width: 1420px;
  margin: 0 auto;
}

.footer__content {
  display: flex;
  flex-wrap: wrap;
  gap: 36px;
  justify-content: center;
}

.footer__info {
  flex: 1;
  max-width: 680px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}


.footer__title {
  font-family: 'League Spartan', sans-serif;
  font-weight: 700;
  font-size: 18px;
  line-height: 16.6px;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  color: #F5F5F8;
  margin-bottom: 20px;
}
@media screen and (max-width: 787px) {
.footer__title {
  margin-top: 44px;
  margin-bottom: 0;
}
}
.footer__description {
  font-family: 'Montserrat', sans-serif;
  font-weight: 500;
  font-size: 16px;
  line-height: 22px;
  letter-spacing: 0.03em;
  color: #F5F5F8;
}

.footer__contact {
  display: flex;
  flex-direction: column;
  gap: 9px;
}

.footer__contact-title {
  font-family: 'League Spartan', sans-serif;
  font-weight: 700;
  font-size: 18px;
  line-height: 24px;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  color: #F5F5F8;
  margin-bottom: 16px;
}

.footer__contact-item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.footer__icon {
  width: 26px;
  height: 24px;
  flex-shrink: 0;
}

.footer__link {
  color: #F3F4F6;
  text-decoration: underline;
}

.footer__address {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.footer__address-title {
  font-family: "League Spartan";
  font-size: 18px;
  font-weight: 700;
  text-transform: uppercase;
  line-height: 24px;
  letter-spacing: 0.96px;
}

.footer__address-content {
  font-family: "Montserrat";
  font-size: 16px;
  line-height: 22px;
}

/* Footer Bottom */
.footer__bottom {
  background-color: #FCD34D;
  padding: 20px 30px;
  position: relative;
}

.footer__bottom-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 8px;
}

.footer__copyright {
  display: flex;
  align-items: center;
  gap: 8px;
}

.footer__brand {
  font-family: "League Spartan";
  font-size: 18px;
  font-weight: 700;
  text-transform: uppercase;
  line-height: 24px;
  letter-spacing: 0.96px;
}

.footer__year {
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.16px;
  font-weight: 700;
}

.footer__credits {
  display: flex;
  align-items: center;
  gap: 8px;
}

.footer__design-by {
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.16px;
  font-weight: 700;
}

.footer__designer {
  font-family: "League Spartan";
  font-size: 18px;
  font-weight: 700;
  text-transform: uppercase;
  line-height: 24px;
  letter-spacing: 0.96px;
}

.footer__scroll-top {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 40px;
  display: flex;
  align-items: center;
  gap: 22px;
  background-color: #FCD34D;
  border: 2px solid #112832;
  border-radius: 40px;
  padding: 8.5px 15px 8.5px 20px;
  cursor: pointer;
}

.footer__scroll-top span {
  font-family: "League Spartan";
  font-size: 18px;
  font-weight: 700;
  text-transform: uppercase;
  line-height: 17px;
  letter-spacing: 0.96px;
}

.footer__scroll-icon {
  width: 28px;
  height: 28px;
  flex-shrink: 0;
}

@media (max-width: 1024px) {
  .footer__top {
    padding: 40px 32px;
  }
  
  .footer__content {
    gap: 24px;
  }
  
  .footer__info {
    max-width: 100%;
  }
}

@media (max-width: 768px) {
  .footer__top {
    padding: 30px 16px;
  }
  
  .footer__bottom {
    padding: 15px;
    position: relative;
  }
  
  .footer__bottom-container {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
    margin-top: 20px;
  }
  
  .footer__copyright {
    flex-direction: column;
    gap: 5px;
    justify-content: flex-start;
  }
  
  .footer__credits {
    flex-direction: column;
    gap: 5px;
    text-align: right;
  }
  
  .footer__scroll-top {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -25px;
    display: flex;
    align-items: center;
    gap: 11px;
    height: 42px;
    background-color: #FCD34D;
    border: 2px solid #112832;
    border-radius: 20px;
    padding: 4px 10px 4px 10px;
    cursor: pointer;
    z-index: 10;
    width: 338px;
  }

  .footer__scroll-icon {
    width: 14px;
    height: 14px;
  }

  .footer__content {
    flex-direction: column;
    gap: 30px;
  }

  .footer__info {
    order: 1;
    width: 100%;
  }

  .footer__contact {
    order: 2;
    width: 100%;
  }

  .footer__address {
    order: 3;
    width: 100%;
  }

  .footer__info-content {
    flex-direction: column;
    gap: 15px;
  }

  .footer__contact-content {
    flex-direction: column;
    gap: 15px;
  }

  .footer__address-content {
    flex-direction: column;
    gap: 15px;
  }
}
