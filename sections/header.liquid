{% comment %}
  Header section for Wiertla CNC Shopify theme
{% endcomment %}

<style>
  .header {
    position: relative;
    z-index: 50;
    font-family: "League Spartan";
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.96px;
  }

  .header__top {
    background-color: #FCD34D;
  }

  .header__container {
    max-width: 1420px;
    margin: 0 auto;
  }

  .header__top-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 13px 0 9px;
  }

  .header__nav-links {
    display: flex;
    align-items: center;
    gap: 30px;
    padding-bottom: 5px;
  }

  .header__lang-links {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .header__link {
    font-size: 18px;
    line-height: 17px;
    color: #112832;
    text-decoration: none;
  }

  .header__link:hover {
    text-decoration: underline;
  }

  .header__logo {
    height: 74px;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    background: white;
  }

  .header__logo-container {
    height: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #FCD34D;
    border: 6px solid #112832;
    border-radius: 60px;
    padding: 20px 28px 19px;
    position: relative;
    z-index: 1;
    margin-bottom: -6px;
  }

  .header__logo-text {
    font-size: 44px;
    line-height: normal;
    text-align: center;
    color: #112832;
    text-decoration: none;
  }

  .header__bottom {
    background-color: white;
    border-top: 1px solid #E5E7EB;
  }

  .header__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 69px;
    padding: 0 10px;
  }

  .header__contact {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .header__contact-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .header__contact-icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 30px;
  }

 

  @media (max-width: 1024px) {
    .header__nav-links,
    .header__lang-links,
    .header__contact,
    .header__actions {
      gap: 15px;
    }

    .header__logo-container {
      height: 80px;
      padding: 15px 20px;
    }

    .header__logo-text {
      font-size: 36px;
    }

    .header__bottom-content {
      height: auto;
      padding: 15px 10px;
    }
  }

  @media (max-width: 768px) {
    .header__top-content,
    .header__bottom-content {
      flex-direction: column;
      align-items: center;
      gap: 10px;
      padding: 15px 0;
    }

    .header__nav-links,
    .header__lang-links {
      justify-content: center;
    }

    .header__contact,
    .header__actions {
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    .header__bottom-content {
      padding: 20px 10px;
    }
  }
</style>

<header class="header">
  <div class="header__top">
    <div class="header__container">
      <div class="header__top-content">
        <div class="header__nav-links">
          <a href="/collections/wiertla" class="header__link">wiertła</a>
          <a href="/collections/plytki" class="header__link">płytki</a>
          <a href="/collections/koronki" class="header__link">koronki</a>
        </div>
        <div class="header__lang-links">
          <a href="#" class="header__link" data-lang="pl">PL</a>
          <a href="#" class="header__link" data-lang="en">EN</a>
          <a href="#" class="header__link" data-lang="de">DE</a>
        </div>
      </div>
    </div>
  </div>

  <div class="header__logo">
    <div class="header__logo-container">
      <a href="{{ routes.root_url }}" class="header__logo-text">
        wiertla-cnc.com
      </a>
    </div>
  </div>

  <div class="header__bottom">
    <div class="header__container">
      <div class="header__bottom-content">
        <div class="header__contact">
          <div class="header__contact-item">
            <img src="{{ 'Ico_phone.svg' | asset_url }}" class="header__contact-icon" alt="Phone icon">
            <a href="tel:48600673736" class="header__link">+48 600 67 37 36</a>
          </div>
          <div class="header__contact-item">
            <img src="{{ 'Ico_mail.svg' | asset_url }}" class="header__contact-icon" alt="Email icon">
            <a href="mailto:biuro@hmmetal.pl" class="header__link">biuro@hmmetal.pl</a>
          </div>
        </div>
        <div class="header__actions">
          <a href="/collections/all" class="header__link">kup</a>
          <a href="/pages/wypozycz" class="header__link">wypożycz</a>
          <a href="/pages/regeneruj" class="header__link">Regenereuj</a>
          <a href="/pages/naostrz" class="header__link">naostrz</a>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "wiertla-cnc.com"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number",
      "default": "+48 600 67 37 36"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "biuro@hmmetal.pl"
    }
  ],
  "presets": [
    {
      "name": "Header",
      "category": "Header"
    }
  ]
}
{% endschema %}
