<script>
  document.addEventListener('DOMContentLoaded', function() {
  const header = document.querySelector('[data-header]');
  const mobileMenuButton = document.querySelector('.header__mobile-menu-button');
  const mobileMenu = document.querySelector('.header__mobile-menu');
  const mobileMenuLinks = document.querySelector('.header__mobile-menu-links');
  const mobilePhoneButton = document.getElementById('mobile-phone-button');
  const menuIconClosed = document.querySelector('.header__menu-icon.closed');
  const menuIconOpen = document.querySelector('.header__menu-icon.open');
  let lastScrollTop = 0;
  
  // Phone number copy function
  if (mobilePhoneButton) {
    mobilePhoneButton.addEventListener('click', function() {
      const phoneNumber = '{{ section.settings.phone }}';
      navigator.clipboard.writeText(phoneNumber).then(function() {
        // Show a toast or notification
        const toast = document.createElement('div');
        toast.className = 'header__toast';
        toast.textContent = 'Numer telefonu skopiowany!';
        document.body.appendChild(toast);
        
        setTimeout(function() {
          toast.classList.add('active');
        }, 10);
        
        setTimeout(function() {
          toast.classList.remove('active');
          setTimeout(function() {
            document.body.removeChild(toast);
          }, 300);
        }, 2000);
      }).catch(function(err) {
        console.error('Could not copy phone number: ', err);
      });
    });
  }
  
  // Mobile menu toggle with animation
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', function() {
      const isActive = this.classList.toggle('active');
      mobileMenu.classList.toggle('active');
      mobileMenuLinks.classList.toggle('active');
      
      // Animate menu icons
      if (isActive) {
        menuIconClosed.style.opacity = '0';
        menuIconClosed.style.transform = 'translate(-50%, -50%) scale(0.8)';
        menuIconOpen.style.opacity = '1';
        menuIconOpen.style.transform = 'translate(-50%, -50%) scale(1)';
      } else {
        menuIconClosed.style.opacity = '1';
        menuIconClosed.style.transform = 'translate(-50%, -50%) scale(1)';
        menuIconOpen.style.opacity = '0';
        menuIconOpen.style.transform = 'translate(-50%, -50%) scale(0.8)';
      }
      
      // Accessibility
      this.setAttribute('aria-expanded', isActive);
    });
  }

  // Close mobile menu on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && mobileMenu && mobileMenu.classList.contains('active')) {
      mobileMenuButton.click();
    }
  });

  // Sticky header logic
  function handleScroll() {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    const scrollDiff = scrollTop - lastScrollTop;
    
    // Add sticky class when scrolling down
    if (scrollTop > 100) {
      header.classList.add('header--sticky');
      
      if (scrollDiff > 0) {
        // Scrolling down
        header.classList.remove('is-visible');
      } else {
        // Scrolling up
        header.classList.add('is-visible');
      }
    } else {
      header.classList.remove('header--sticky', 'is-visible');
    }
    
    lastScrollTop = scrollTop;
  }

  // Throttle scroll event
  let ticking = false;
  window.addEventListener('scroll', function() {
    if (!ticking) {
      window.requestAnimationFrame(function() {
        handleScroll();
        ticking = false;
      });
      ticking = true;
    }
  });

  // Close mobile menu on resize
  let resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(function() {
      if (window.innerWidth > 768 && mobileMenuLinks && mobileMenuLinks.classList.contains('active')) {
        mobileMenuButton.click();
      }
    }, 250);
  });

  // Update cart count when items are added/removed
  document.addEventListener('cart:updated', function(event) {
    const cartCount = document.querySelector('.header__cart-count');
    if (cartCount) {
      cartCount.textContent = event.detail.cart.item_count;
    }
  });
  });

  window.openFilterModal = function() { ... }
  window.closeFilterModal = function() { ... }

  filterButton.onclick = function(e) {
  e.preventDefault();
  e.stopPropagation();
  window.openFilterModal();
  return false;
  };

</script>

