<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    const header = document.querySelector('[data-header]');
    const mobileMenuButton = document.querySelector('.header__mobile-menu-button');
    const mobileMenuLinks = document.querySelector('.header__mobile-menu-links');
    const mobilePhoneButton = document.getElementById('mobile-phone-button');
    const menuIconClosed = document.querySelector('.header__menu-icon.closed');
    const menuIconOpen = document.querySelector('.header__menu-icon.open');
    const headerHeight = header.offsetHeight;

    // Set initial state
    if (menuIconOpen) {
      menuIconOpen.style.display = 'none';
    }


    let lastScrollTop = 0;
    let scrollThreshold = 100;
    let isScrolling = false;
    let isHeaderSticky = false;
    
    // Phone number copy function
    if (mobilePhoneButton) {
      mobilePhoneButton.addEventListener('click', function() {
        const phoneNumber = '{{ section.settings.phone }}';
        navigator.clipboard.writeText(phoneNumber).then(function() {
          const toast = document.createElement('div');
          toast.className = 'header__toast';
          toast.textContent = 'Numer telefonu skopiowany!';
          document.body.appendChild(toast);
          
          setTimeout(function() {
            toast.classList.add('active');
          }, 10);
          
          setTimeout(function() {
            toast.classList.remove('active');
            setTimeout(function() {
              document.body.removeChild(toast);
            }, 300);
          }, 2000);
        }).catch(function(err) {
          console.error('Could not copy phone number: ', err);
        });
      });
    }
    
    // Mobile menu toggle with animation
    if (mobileMenuButton && mobileMenuLinks) {
      mobileMenuButton.addEventListener('click', function() {
        const isActive = this.classList.toggle('active');
        
        mobileMenuLinks.classList.toggle('open');
        
        // Toggle menu icons
        if (isActive) {
          menuIconClosed.style.display = 'none';
          menuIconOpen.style.display = 'block';
        } else {
          menuIconClosed.style.display = 'block';
          menuIconOpen.style.display = 'none';
        }
        
        // Accessibility
        this.setAttribute('aria-expanded', isActive);
      });
    } else {
      console.error('Mobile menu elements not found:', {
        button: !!mobileMenuButton,
        links: !!mobileMenuLinks
      });
    }

    // Close mobile menu on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && mobileMenuLinks && mobileMenuLinks.classList.contains('open')) {
        mobileMenuButton.click();
      }
    });

    // Improved sticky header logic with debounce and smooth transitions
    function handleScroll() {
      if (isScrolling) return;
      
      isScrolling = true;
      requestAnimationFrame(function() {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const scrollDiff = scrollTop - lastScrollTop;
        
        // Only apply sticky header after scrolling past threshold
        if (scrollTop > scrollThreshold) {
          if (!isHeaderSticky) {
            // First time entering sticky mode - add a placeholder to prevent content jump
            const placeholder = document.createElement('div');
            placeholder.id = 'header-placeholder';
            placeholder.style.height = headerHeight + 'px';
            header.parentNode.insertBefore(placeholder, header);
            isHeaderSticky = true;
          }
          
          header.classList.add('header--sticky');
          
          // Only toggle visibility if scroll difference is significant
          if (Math.abs(scrollDiff) > 5) {
            if (scrollDiff > 0) {
              // Scrolling down
              header.classList.remove('is-visible');
            } else {
              // Scrolling up
              header.classList.add('is-visible');
            }
          }
        } else {
          if (isHeaderSticky) {
            // Remove placeholder when exiting sticky mode
            const placeholder = document.getElementById('header-placeholder');
            if (placeholder) {
              placeholder.remove();
            }
            isHeaderSticky = false;
          }
          
          header.classList.remove('header--sticky', 'is-visible');
        }
        
        lastScrollTop = scrollTop;
        isScrolling = false;
      });
    }

    // Throttle scroll event with requestAnimationFrame
    window.addEventListener('scroll', function() {
      if (!isScrolling) {
        requestAnimationFrame(handleScroll);
      }
    }, { passive: true });

    // Close mobile menu on resize
    let resizeTimer;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(function() {
        if (window.innerWidth > 768 && mobileMenuLinks && mobileMenuLinks.classList.contains('open')) {
          mobileMenuButton.click();
        }
      }, 250);
    });

    // Update cart count when items are added/removed
    document.addEventListener('cart:updated', function(event) {
      const cartCount = document.querySelector('.header__cart-count');
      if (cartCount) {
        cartCount.textContent = event.detail.cart.item_count;
      }
    });

    const phoneNumber = document.querySelector('.header__phone-number');
    
    if (phoneNumber) {
      phoneNumber.addEventListener('click', function(e) {
        if (window.innerWidth <= 768) {
          window.location.href = 'tel:{{ section.settings.phone }}';
        }
      });
    }

    // Add scroll functionality for table links
    document.querySelectorAll('.js-scroll-to-table').forEach(link => {
      link.addEventListener('click', function(e) {
        const table = document.querySelector('.wiertla-categories__table');
        if (table) {
          // Same-page scroll
          e.preventDefault();
          const header = document.querySelector('.header');
          const headerHeight = header ? header.offsetHeight : 0;
          const tableTop = table.getBoundingClientRect().top + window.pageYOffset;
          const scrollTo = tableTop - headerHeight - 20;
          window.scrollTo({ top: scrollTo, behavior: 'smooth' });
          const mobileMenuButton = document.querySelector('.header__mobile-menu-button');
          if (mobileMenuButton && mobileMenuButton.classList.contains('active')) {
            mobileMenuButton.click();
          }
        } else {
          // Navigate to target URL (homepage anchor) when table not present
          // Allow default navigation
        }
      });
    });

    // Language links: force set ?locale= and navigate (works on cart too)
    document.querySelectorAll('.header__lang-links a[data-lang]').forEach(function(a){
      a.addEventListener('click', function(ev){
        ev.preventDefault();
        var targetLocale = a.getAttribute('data-lang');
        try {
          var url = new URL(window.location.href);
          url.searchParams.set('locale', targetLocale);
          window.location.assign(url.toString());
        } catch(err) {
          // Fallback
          window.location.href = a.getAttribute('href');
        }
      });
    });
  });

  // Move filter modal functions outside DOMContentLoaded
  window.openFilterModal = function() {
  // ... existing code ...
  };

  window.closeFilterModal = function() {
  // ... existing code ...
  };

  // Move filter button click handler outside DOMContentLoaded
  const filterButton = document.querySelector('.filter-button');
  if (filterButton) {
  filterButton.onclick = function(e) {
    e.preventDefault();
    e.stopPropagation();
    window.openFilterModal();
    return false;
  };
  }
</script>

