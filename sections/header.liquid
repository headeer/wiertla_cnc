              alt="{{ 'header.contact.email_icon_alt' | t }}">
            <a href="mailto:{{ section.settings.email }}" class="header__link">{{ section.settings.email }}</a>
          </div>
        </div>
        <div class="header__actions">
          <a
            href="/collections/plytki-do-wierel"
            class="header__link header__action-menu"
            data-translate="header.actions.buy">KUP</a>
          <a
            href="/pages/wypozycz"
            class="header__link header__action-menu"
            data-translate="header.actions.rent">{{ 'header.actions.rent' | t }}</a>
          <a href="/account" class="header__action-link">
            <img
              src="{{ 'profile_icon.svg' | asset_url }}"
              alt="Profile"
              class="header__action-icon">
          </a>
          <a href="/cart" class="header__action-link add_to_cart">
            <img
              src="{{ 'shopping_cart.svg' | asset_url }}"
              alt="Cart"
              class="header__action-icon">
            <span class="header__cart-count">{{ cart.item_count }}</span>
          </a>
          <a
            href="/pages/regeneruj"
            class="header__link header__action-menu"
            data-translate="header.actions.regenerate">Regeneruj</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu links -->
  <div class="header__mobile-menu-links">
    <a
      href="#wiertla-table"
      class="header__mobile-menu-link js-scroll-to-table">
      <img
        src="{{ 'crown_icon.svg' | asset_url }}"
        alt="Koronki"
        width="24"
        height="24"
        class="header__mobile-menu-icon">
      KORONKI DO WIEREŁ
    </a>
    <a
      href="#wiertla-table"
      class="header__mobile-menu-link js-scroll-to-table">
      <img
        src="{{ 'plate_icon.svg' | asset_url }}"
        alt="Płytki"
        width="24"
        height="24"
        class="header__mobile-menu-icon">
      PŁYTKI DO WIEREŁ
    </a>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('DOM Content Loaded');
    
    const header = document.querySelector('[data-header]');
    const mobileMenuButton = document.querySelector('.header__mobile-menu-button');
    const mobileMenuLinks = document.querySelector('.header__mobile-menu-links');
    const mobilePhoneButton = document.getElementById('mobile-phone-button');
    const menuIconClosed = document.querySelector('.header__menu-icon.closed');
    const menuIconOpen = document.querySelector('.header__menu-icon.open');
    const headerHeight = header.offsetHeight;

    // Set initial state
    if (menuIconOpen) {
      menuIconOpen.style.display = 'none';
    }

    console.log('Elements found:', {
      header: !!header,
      mobileMenuButton: !!mobileMenuButton,
      mobileMenuLinks: !!mobileMenuLinks,
      mobilePhoneButton: !!mobilePhoneButton,
      menuIconClosed: !!menuIconClosed,
      menuIconOpen: !!menuIconOpen,
      headerHeight: headerHeight
    });

    let lastScrollTop = 0;
    let scrollThreshold = 100;
    let isScrolling = false;
    let isHeaderSticky = false;
    
    // Phone number copy function
    if (mobilePhoneButton) {
      mobilePhoneButton.addEventListener('click', function() {
        console.log('Phone button clicked');
        const phoneNumber = '{{ section.settings.phone }}';
        navigator.clipboard.writeText(phoneNumber).then(function() {
          console.log('Phone number copied to clipboard');
          const toast = document.createElement('div');
          toast.className = 'header__toast';
          toast.textContent = 'Numer telefonu skopiowany!';
          document.body.appendChild(toast);
          
          setTimeout(function() {
            toast.classList.add('active');
          }, 10);
          
          setTimeout(function() {
            toast.classList.remove('active');
            setTimeout(function() {
              document.body.removeChild(toast);
            }, 300);
          }, 2000);
        }).catch(function(err) {
          console.error('Could not copy phone number: ', err);
        });
      });
    }
    
    // Mobile menu toggle with animation
    if (mobileMenuButton && mobileMenuLinks) {
      console.log('Setting up mobile menu toggle');
      mobileMenuButton.addEventListener('click', function() {
        console.log('Menu button clicked');
        const isActive = this.classList.toggle('active');
