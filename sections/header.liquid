// Header navigation tab switching functionality
document.addEventListener('DOMContentLoaded', function() {
  // Handle header navigation clicks
  document.querySelectorAll('.header__nav-links .header__link[data-tab-type]').forEach(function(link) {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      
      const tabType = this.getAttribute('data-tab-type');
      if (!tabType) return;
      
      // Wait for the page to load if we're navigating to a new page
      if (window.location.pathname !== this.pathname) {
        // If navigating to a different page, let the URL handle it
        window.location.href = this.href;
        return;
      }
      
      // If we're on the same page, trigger tab switching
      setTimeout(function() {
        // Find and click the corresponding tab
        const tabButton = document.querySelector('.wiertla-categories__tab[data-tab-type="' + tabType + '"]');
        if (tabButton) {
          tabButton.click();
        }
        
        // Scroll to table
        const tableContainer = document.querySelector('.wiertla-categories__table-container');
        if (tableContainer) {
          tableContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      }, 100);
    });
  });
});
