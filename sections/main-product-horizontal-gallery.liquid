<script>
document.addEventListener('DOMContentLoaded', function() {
  const quantityContainer = document.querySelector('.product-details__quantity');
  if (!quantityContainer) return;

  const quantityInput = quantityContainer.querySelector('.quantity__input');
  const decreaseBtn = quantityContainer.querySelector('[data-quantity-decrease]');
  const increaseBtn = quantityContainer.querySelector('[data-quantity-increase]');
  const addToCartBtn = document.querySelector('.product-details__add-to-cart');
  const stockQuantity = parseInt(quantityContainer.dataset.stockQuantity) || 0;
  const minQuantity = parseInt(quantityContainer.dataset.minQuantity) || 1;

  function updateButtonStates() {
    if (!quantityInput) return;
    
    const currentQuantity = parseInt(quantityInput.value) || minQuantity;
    
    // Update decrease button - disable if quantity is at minimum or stock is 0
    if (decreaseBtn) {
      decreaseBtn.disabled = currentQuantity <= minQuantity || stockQuantity <= 0;
    }
    
    // Update increase button - disable if quantity equals stock or stock is 0
    if (increaseBtn) {
      increaseBtn.disabled = currentQuantity >= stockQuantity || stockQuantity <= 0;
    }
    
    // Update add to cart button - disable if stock is 0
    if (addToCartBtn) {
      addToCartBtn.disabled = stockQuantity <= 0;
    }
  }

  // Initial button state update
  updateButtonStates();

  // Handle quantity input changes
  if (quantityInput) {
    quantityInput.addEventListener('input', function() {
      let value = parseInt(this.value) || minQuantity;
      
      // Ensure value is within bounds and respects MOQ
      if (value < minQuantity) value = minQuantity;
      if (value > stockQuantity && stockQuantity > 0) value = stockQuantity;
      
      // Round to nearest MOQ multiple
      if (minQuantity > 1) {
        value = Math.ceil(value / minQuantity) * minQuantity;
      }
      
      this.value = value;
      updateButtonStates();
    });
  }

  // Handle decrease button
  if (decreaseBtn) {
    decreaseBtn.addEventListener('click', function() {
      if (!quantityInput || this.disabled) return;
      
      let currentValue = parseInt(quantityInput.value) || minQuantity;
      let newValue = currentValue - minQuantity;
      if (newValue >= minQuantity) {
        quantityInput.value = newValue;
        updateButtonStates();
      }
    });
  }

  // Handle increase button
  if (increaseBtn) {
    increaseBtn.addEventListener('click', function() {
      if (!quantityInput || this.disabled) return;
      
      let currentValue = parseInt(quantityInput.value) || minQuantity;
      let newValue = currentValue + minQuantity;
      if (newValue <= stockQuantity) {
        quantityInput.value = newValue;
        updateButtonStates();
      }
    });
  }
});
</script>

<div class="product-page">
  <!-- Breadcrumbs -->
  <div class="product-breadcrumbs">
    <a href="/" class="product-breadcrumbs__home">Home</a>
    <span>/</span>
    <a href="/collections/all" class="product-breadcrumbs__collection">Products</a>
    <span>/</span>
    {%- liquid
      assign locale_code = request.locale.iso_code | downcase
      assign translated_title = product.title
      if locale_code == 'pl' and product.metafields.custom.nazwa_pl != blank
        assign translated_title = product.metafields.custom.nazwa_pl
      elsif locale_code == 'en' and product.metafields.custom.nazwa_en != blank
        assign translated_title = product.metafields.custom.nazwa_en
      elsif locale_code == 'de' and product.metafields.custom.nazwa_de != blank
        assign translated_title = product.metafields.custom.nazwa_de
      endif
      assign manufacturer = product.metafields.custom.manufacturer
      assign producer_code = product.metafields.custom.kod_producenta
      assign display_name = translated_title
      if manufacturer != blank
        assign display_name = display_name | append: ' ' | append: manufacturer
      endif
      if producer_code != blank
        assign display_name = display_name | append: ' ' | append: producer_code
      endif
    -%}
    <span class="product-breadcrumbs__current">{{ display_name }}</span>
  </div>

  <div class="product-layout">
    <!-- Product Image Section -->
    <div class="product-image">
      {%- if featured_media != blank -%}
        <img
          srcset="{%- if featured_media.preview_image.width >= 288 -%}{{ featured_media.preview_image | image_url: width: 288 }} 288w,{%- endif -%}
            {%- if featured_media.preview_image.width >= 576 -%}{{ featured_media.preview_image | image_url: width: 576 }} 576w,{%- endif -%}
            {%- if featured_media.preview_image.width >= 550 -%}{{ featured_media.preview_image | image_url: width: 550 }} 550w,{%- endif -%}
            {%- if featured_media.preview_image.width >= 1100 -%}{{ featured_media.preview_image | image_url: width: 1100 }} 1100w{%- endif -%}"
          src="{{ featured_media | image_url: width: 550 }}"
          sizes="(min-width: 1200px) 550px, (min-width: 990px) calc(55.0vw - 10rem), (min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)"
          alt="{{ featured_media.alt | escape }}"
          loading="lazy"
          width="{{ featured_media.width }}"
          height="{{ featured_media.height }}">
      {%- else -%}
        <div class="product-image-placeholder">
          {{ 'product-1' | placeholder_svg_tag: 'product-image-placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    <!-- Product Details Section -->
    <main class="product-details" data-product-id="{{ product.id }}"
      data-nazwa-pl="{{ product.metafields.custom.nazwa_pl | escape }}"
      data-nazwa-en="{{ product.metafields.custom.nazwa_en | escape }}"
      data-nazwa-de="{{ product.metafields.custom.nazwa_de | escape }}"
      data-manufacturer="{{ product.metafields.custom.manufacturer | escape }}"
      data-kod="{{ product.metafields.custom.kod_producenta | escape }}">
      <div class="product-details__container">
        <!-- Product Details Section -->
        <section class="product-details__info">
          <!-- Product Name -->
          <div class="product-details__sku">
            {{ display_name }}
          </div>

          <!-- Product Availability Status -->
          {%- unless product.available -%}
            <div class="product-details__availability">
              <span class="product-details__availability-label">Niedostępny</span>
            </div>
          {%- endunless -%}

          <!-- Product Specifications -->
          <div class="product-details__specs">
            {%- liquid
              assign sku_prefix = product.first_available_variant.sku | slice: 0, 2
              assign is_plytki = false
              assign is_koronki = false  
              assign is_wiertla = false
              
              # Determine product type based on SKU prefix or other logic
              if sku_prefix == 'PR' or sku_prefix == 'PS'
                assign is_plytki = true
              elsif sku_prefix == 'VW' or sku_prefix == 'WK'
                assign is_koronki = true
              elsif sku_prefix == 'WW' or sku_prefix == 'WV' or sku_prefix == 'IS' or sku_prefix == 'WA'
                assign is_wiertla = true
              else
                # Default to wiertla if unknown
                assign is_wiertla = true
              endif
            -%}

            {%- if is_plytki -%}
              <!-- PŁYTKI SPECIFICATIONS -->
              {%- if product.metafields.custom.kod_producenta != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">Kod producenta</div>
                  <div class="product-details__spec-value">{{ product.metafields.custom.kod_producenta }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

              {%- if product.metafields.custom.manufacturer != blank or product.vendor != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">Producent</div>
                  <div class="product-details__spec-value">{{ product.metafields.custom.manufacturer | default: product.vendor }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

              {%- if product.metafields.custom.rodzaj != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">Rodzaj</div>
                  <div class="product-details__spec-value">{{ product.metafields.custom.rodzaj }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

              {%- if product.metafields.custom.gniazdo != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">Gniazdo</div>
                  <div class="product-details__spec-value">{{ product.metafields.custom.gniazdo }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

              {%- assign ilosc_value = product.metafields.custom.custom_szt | default: product.metafields.custom.szt | default: product.metafields.custom.ilosc -%}
              {%- if ilosc_value != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">Ilość</div>
                  <div class="product-details__spec-value">{{ ilosc_value }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

              {%- if product.sku != blank or product.first_available_variant.sku != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">SKU</div>
                  <div class="product-details__spec-value">{{ product.first_available_variant.sku | default: product.sku }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

              {%- if product.metafields.custom.stan != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">Stan</div>
                  <div class="product-details__spec-value">{{ product.metafields.custom.stan }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

              {%- assign stock_quantity = product.first_available_variant.inventory_quantity | default: 0 -%}
              <div class="product-details__spec-item">
                <div class="product-details__spec-label">Dostępność</div>
                <div class="product-details__spec-value">
                  {% if stock_quantity > 0 %}
                    {{ stock_quantity }} szt.
                  {% else %}
                    Niedostępne
                  {% endif %}
                </div>
              </div>
              <div class="product-details__divider"></div>

              {%- if product.price != blank -%}
                <div class="product-details__spec-item">
                  <div class="product-details__spec-label">Cena netto</div>
                  <div class="product-details__spec-value">{{ product.price | money_without_trailing_zeros }}</div>
                </div>
                <div class="product-details__divider"></div>
              {%- endif -%}

            {%- elsif is_koronki -%}
              <!-- KORONKI SPECIFICATIONS -->
