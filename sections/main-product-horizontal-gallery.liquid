              {%- assign fi_source = '' -%}
              {%- if product.metafields.custom.srednica_display != blank -%}
                {%- assign fi_value = product.metafields.custom.srednica_display -%}
                {%- assign fi_source = 'srednica_display' -%}
              {%- elsif product.metafields.custom._rednica != blank -%}
                {%- assign fi_value = product.metafields.custom._rednica -%}
                {%- assign fi_source = '_rednica' -%}
              {%- elsif product.metafields.custom.srednica != blank -%}
                {%- assign fi_value = product.metafields.custom.srednica -%}
                {%- assign fi_source = 'srednica' -%}
              {%- elsif product.metafields.custom.fi != blank -%}
                {%- assign fi_value = product.metafields.custom.fi -%}
                {%- assign fi_source = 'fi' -%}
              {%- elsif product.metafields.custom.diameter.value != blank -%}
                {%- assign fi_value = product.metafields.custom.diameter.value -%}
