          if (!r.ok) continue;
          var d = await r.json();
          if (Array.isArray(d.products)) results = results.concat(d.products);
        }
      } catch (e) {}
      return results;
    }

    function resolveProdImage(prod, fallback){
      try {
        var cands = [];
        if (prod) {
          if (prod.featured_image) cands.push(prod.featured_image.src || prod.featured_image);
          if (prod.image) cands.push(prod.image.src || prod.image);
          if (prod.featured_media && prod.featured_media.preview_image) cands.push(prod.featured_media.preview_image.src);
          if (Array.isArray(prod.images) && prod.images.length) cands.push(prod.images[0].src || prod.images[0]);
          if (Array.isArray(prod.media) && prod.media.length && prod.media[0] && prod.media[0].preview_image) cands.push(prod.media[0].preview_image.src);
          if (Array.isArray(prod.variants) && prod.variants.length && prod.variants[0] && prod.variants[0].featured_image) cands.push(prod.variants[0].featured_image.src || prod.variants[0].featured_image);
          if (prod.preview_image) cands.push(prod.preview_image.src || prod.preview_image);
          if (prod.thumbnail) cands.push(prod.thumbnail);
        }
        for (var i=0;i<cands.length;i++){
          var u = (cands[i] || '').toString().trim();
          if (u && u !== 'null' && u !== 'undefined') return u;
        }
      } catch(_) {}
      return fallback || '';
