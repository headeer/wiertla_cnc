    async function fetchAllProducts() {
      var results = [];
      try {
        var baseUrl = '/collections/all?view=wiertla-products-json';
        var res = await fetch(baseUrl + '&page=1', { credentials: 'same-origin' });
        if (!res.ok) return results;
        var data = await res.json();
        var pages = Number(data.pagination && data.pagination.pages) || 1;
        if (Array.isArray(data.products)) results = results.concat(data.products);
        for (var p = 2; p <= pages; p++) {
