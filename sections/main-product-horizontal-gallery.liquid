{% comment %}theme-check-disable TemplateLength{% endcomment %}
{%- liquid
  assign section_color = section.settings.color_scheme
  assign current_variant = product.selected_or_first_available_variant
  assign featured_media = current_variant.featured_media | default: product.featured_media
  assign enable_video_looping = section.settings.enable_video_looping
  assign desktop_image_height = section.settings.desktop_image_height
  assign no_social_blocks = true
  for block in section.blocks
    if block.settings.position == 'product_extra'
      assign no_social_blocks = false
      break
    endif
  endfor

  # Get collection for breadcrumbs
  assign collection = product.collections.first
-%}

{{ 'product-details.css' | asset_url | stylesheet_tag }}

<style>
  .product-image {
    width: 50%;
    height: 100%;
    max-height: 800px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 60px;
    padding: 40px;
    position: relative;
    overflow: hidden;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    max-height: 800px;
    object-fit: contain;
    display: block;
  }

  .product-details {
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding: 40px;
    background: white;
    border-radius: 60px;
    position: relative;
    overflow: hidden;
  }

  .product-layout {
    display: flex;
    gap: 30px;
    width: 100%;
    height: 100%;
    max-height: 800px;
  }

  .product-details__spec-label {
    font-family: 'Montserrat'
    , sans-serif;
    font-size: 1em;
    font-weight: 500;
    color: #112832;
    width: 50%;
  }

  .product-details__spec-value {
    font-family: 'Montserrat'
    , sans-serif;
    font-size: 1em;
    color: #112832;
    width: 50%;
  }

  @media screen and (max-width: 768px) {
    .product-page {
      padding: 0;
    }

    .product-breadcrumbs {
      padding: 15px;
      font-size: 12px;
      margin-bottom: 10px;
    }

    .product-layout {
      flex-direction: column;
      gap: 10px;
      max-height: none;
      height: auto;
    }

    .product-image {
      width: 100%;
      height: auto;
      max-height: none;
      border-radius: 30px;
      padding: 10px;
    }

    .product-image img {
      width: 100%;
      height: auto;
      max-height: 200px;
      object-fit: contain;
    }

    .product-details {
      width: 100%;
      height: auto;
      padding: 15px;
      border-radius: 30px;
    }
  }
  @media (max-width: 768px) {
    .header__nav-links,
    .header__lang-links,
    .header__contact,
    .header__actions {
      display: flex;
    }
  }
</style>

<div class="product-page">
  <!-- Breadcrumbs -->
  <div class="product-breadcrumbs">
    <a
      href="/"
      class="product-breadcrumbs__link"
      data-translation="mainProductHorizontalGallery.home">STRONA GŁÓWNA</a>
    {%- if collection -%}
      <span>/</span>
      <a href="{{ collection.url }}" class="product-breadcrumbs__link">{{ collection.title | upcase }}</a>
    {%- endif -%}
    {%- if product.vendor != blank -%}
      <span>/</span>
      <a href="/collections/vendors?q={{ product.vendor | url_encode }}" class="product-breadcrumbs__link">{{ product.vendor | upcase }}</a>
    {%- endif -%}
    <span>/</span>
    <span class="product-breadcrumbs__current">{{ product.variants[0].sku }}</span>
  </div>

  <div class="product-layout">
    <!-- Product Image Section -->
    <div class="product-image">
      {%- if featured_media != blank -%}
        <img
          srcset="{%- if featured_media.preview_image.width >= 288 -%}{{ featured_media.preview_image | image_url: width: 288 }} 288w,{%- endif -%}
            {%- if featured_media.preview_image.width >= 576 -%}{{ featured_media.preview_image | image_url: width: 576 }} 576w,{%- endif -%}
            {%- if featured_media.preview_image.width >= 550 -%}{{ featured_media.preview_image | image_url: width: 550 }} 550w,{%- endif -%}
            {%- if featured_media.preview_image.width >= 1100 -%}{{ featured_media.preview_image | image_url: width: 1100 }} 1100w{%- endif -%}"
          src="{{ featured_media | image_url: width: 550 }}"
          sizes="(min-width: 1200px) 550px, (min-width: 990px) calc(55.0vw - 10rem), (min-width: 750px) calc((100vw - 11.5rem) / 2), calc(100vw - 4rem)"
          alt="{{ featured_media.alt | escape }}"
          loading="lazy"
          width="{{ featured_media.width }}"
          height="{{ featured_media.height }}">
      {%- endif -%}
    </div>

    <!-- Product Details Section -->
    <main class="product-details" data-product-id="{{ product.id }}">
      <div class="product-details__container">
        <!-- Product Details Section -->
        <section class="product-details__info">
          {%- if product.variants[0].sku != blank -%}
            <!-- Product SKU -->
            <div class="product-details__sku">
              {{ product.variants[0].sku }}
            </div>
          {%- endif -%}

          <!-- Product Specifications -->
          <div class="product-details__specs">
            {%- if product.vendor != blank -%}
              <!-- Manufacturer -->
              <div class="product-details__spec-item">
                <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.productBrand">Producent</div>
                <div class="product-details__spec-value">{{ product.vendor }}</div>
              </div>
              <div class="product-details__divider"></div>
            {%- endif -%}

            {%- if product.metafields.custom.diameter.value != blank -%}
              <!-- Diameter -->
              <div class="product-details__spec-item">
                <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.diameter">średnica</div>
                <div class="product-details__spec-value">
                  <span>⌀</span>
                  <span>{{ product.metafields.custom.diameter.value }}</span>
                </div>
              </div>
              <div class="product-details__divider"></div>
            {%- endif -%}

            {%- if product.metafields.custom.length.value != blank -%}
              <!-- Working Length -->
              <div class="product-details__spec-item">
                <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.workingLength">Długość robocza</div>
                <div class="product-details__spec-value">{{ product.metafields.custom.length.value }}</div>
              </div>
              <div class="product-details__divider"></div>
            {%- endif -%}

            <!-- Condition -->
            <div class="product-details__spec-item">
              <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.condition">Stan</div>
              <div class="product-details__spec-value" data-translation="mainProductHorizontalGallery.new">Nowe</div>
            </div>
            <div class="product-details__divider"></div>

            {%- if product.metafields.custom.symbol.value != blank -%}
              <!-- Our Number -->
              <div class="product-details__spec-item">
                <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.ourNumber">Nasz numer</div>
                <div class="product-details__spec-value">{{ product.metafields.custom.symbol.value }}</div>
              </div>
              <div class="product-details__divider"></div>
            {%- endif -%}

            <!-- Mounting -->
            <div class="product-details__spec-item">
              <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.mounting">Mocowanie</div>
              <div class="product-details__spec-value">
                {%- if product.metafields.custom.mounting.value != blank -%}
                  {{ product.metafields.custom.mounting.value }}
                {%- else -%}
                  6mm
                {%- endif -%}
              </div>
            </div>
            <div class="product-details__divider"></div>

            <!-- Cooling -->
            <div class="product-details__spec-item">
              <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.cooling">Chłodzenie</div>
              <div class="product-details__spec-value">IK</div>
            </div>
            <div class="product-details__divider"></div>

            <!-- Notes -->
            <div class="product-details__spec-item">
              <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.notes">Uwagi</div>
              <div class="product-details__spec-value" data-translation="mainProductHorizontalGallery.withCooling">Z chłodzeniem</div>
            </div>
            <div class="product-details__divider"></div>

            {%- if product.price != blank -%}
              <!-- Net Price -->
              <div class="product-details__spec-item">
                <div class="product-details__spec-label" data-translation="mainProductHorizontalGallery.netPrice">cena netto</div>
                <div class="product-details__spec-value">{{ product.price | money_without_trailing_zeros }}</div>
              </div>
            {%- endif -%}
          </div>
        </section>

        {%- if section.settings.show_quantity_selector -%}
          <!-- Quantity and Add to Cart Section -->
          <section class="product-details__actions">
            <div class="product-details__quantity">
              <div class="product-details__quantity-label" data-translation="mainProductHorizontalGallery.quantity">ilość</div>
              <div class="product-details__quantity-input">
                <input
                  type="number"
                  name="quantity"
                  id="Quantity-{{ section.id }}"
                  min="1"
                  value="1"
                  form="{{ product_form_id }}"
                  class="quantity__input">
              </div>
              <div class="product-details__quantity-unit">szt.</div>
              <button
                type="button"
                class="product-details__quantity-btn product-details__quantity-btn--decrease"
                aria-label="Decrease quantity"
                data-quantity-decrease>
                <img
                  src="{{ 'remove_icon.svg' | asset_url }}"
                  alt="Decrease"
                  class="quantity-icon">
              </button>
              <button
                type="button"
                class="product-details__quantity-btn product-details__quantity-btn--increase"
                aria-label="Increase quantity"
                data-quantity-increase>
                <img
                  src="{{ 'add_icon.svg' | asset_url }}"
                  alt="Increase"
                  class="quantity-icon">
              </button>
            </div>
            {%- form 'product'
              , product
              , id: product_form_id
              , class: 'form'
              , novalidate: 'novalidate'
              , data-type: 'add-to-cart-form' -%}
              <input
                type="hidden"
                name="id"
                value="{{ current_variant.id }}">
              <button
                type="submit"
                name="add"
                class="product-details__add-to-cart"
                {% if current_variant.available == false %}
                disabled{% endif %}>
                <span data-translation="mainProductHorizontalGallery.addToCart">DO KOSZYKA</span>
                <img
                  src="{{ 'shopping_cart.svg' | asset_url }}"
                  alt="Cart"
                  class="cart-icon">
              </button>
            {%- endform -%}
          </section>
        {%- endif -%}

        {%- if section.settings.show_delivery_time or section.settings.show_contact_info -%}
          <!-- Delivery and Contact Section -->
          <section class="product-details__contact">
            {%- if section.settings.show_delivery_time -%}
              <!-- Delivery Time -->
              <div class="product-details__delivery">
                <div class="product-details__delivery-header">
                  <img
                    src="{{ 'truck_icon.svg' | asset_url }}"
                    alt="Delivery"
                    class="delivery-icon">
                  <div class="product-details__delivery-label" data-translation="mainProductHorizontalGallery.deliveryTime">Czas dostawy</div>
                </div>
                <div class="product-details__delivery-value">2-3
                  <span data-translation="mainProductHorizontalGallery.days">dni robocze</span>
                </div>
              </div>
            {%- endif -%}

            {%- if section.settings.show_contact_info -%}
              <!-- Contact Information -->
              <div class="product-details__contact-info">
                <div class="product-details__contact-title" data-translation="mainProductHorizontalGallery.contactTitle">Chcesz wypożyczyć? masz pytania? Skontaktuj się</div>
                <div class="product-details__contact-methods">
                  <a href="tel:+48600673736" class="product-details__contact-link">
                    <img
                      src="{{ 'Ico_phone.svg' | asset_url }}"
                      alt="Phone"
                      class="contact-icon">
                    <span>+48 600 67 37 36</span>
                  </a>
                  <a href="mailto:biuro@hmmetal.pl" class="product-details__contact-link">
                    <img
                      src="{{ 'Ico_mail.svg' | asset_url }}"
                      alt="Email"
                      class="contact-icon">
                    <span>biuro@hmmetal.pl</span>
                  </a>
                </div>
              </div>
            {%- endif -%}
          </section>
        {%- endif -%}
      </div>
    </main>
  </div>
</div>

<!-- Latest Products Section -->
<div class="latest-products">
  <div class="latest-products__title" data-translate="wiertla_stats.latest_products.title">NAJNOWSZE W NASZEJ OFERCIE</div>
  <div class="latest-products__subtitle" data-translate="wiertla_stats.latest_products.subtitle">Stale poszerzamy nasz asortyment, aktualizując ofertę o nowe modele wierteł CNC</div>

  <div class="latest-products__swiper swiper">
    <div class="swiper-wrapper">
      {% assign all_products = collections.all.products | sort: 'created_at' | reverse %}
      {% for product in all_products limit: 8 %}
        <div class="swiper-slide">
          <a href="{{ product.url }}" class="product-card">
            <div class="product-card__top">
              <div class="product-card__image-container">
                <img
                  src="{{ product.featured_image | img_url: '68x68', crop: 'center' }}"
                  alt="{{ product.title }}"
                  class="product-card__image"
                  width="34"
                  height="34"
                  loading="lazy">
              </div>
              <div class="product-card__fi">
                fi ⌀ {{ product.metafields.custom.fi | default: 'N/A' }}
              </div>
              <div class="product-card__dimension">
                {{ product.metafields.custom.dimension | default: 'N/A' }}
              </div>
            </div>

            <div class="product-card__symbol">
              {{ product.metafields.custom.symbol | default: product.sku | default: 'N/A' }}
            </div>

            <div class="product-card__bottom">
              <div class="product-card__vendor">
                {{ product.vendor }}
              </div>
              <div class="product-card__price-container">
                <div class="product-card__price">
                  {% if product.price_varies %}
                    {{ product.price_min | money }}
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>
                {% if product.metafields.custom.rent_tool %}
                  <div class="product-card__rent">
                    {{ 'wiertla_stats.rent_tool_text' | t }}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="17"
                      height="12"
                      viewBox="0 0 17 12"
                      fill="none">
                      <path d="M10.5 12L9.1 10.55L12.65 7H0.5V5H12.65L9.1 1.45L10.5 0L16.5 6L10.5 12Z" fill="#112832" />
                    </svg>
                  </div>
                {% endif %}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-navigation">
      <div class="swiper-button-prev"></div>
      <div class="pagination-container">
        {% assign total_slides = all_products.size %}
        {% if total_slides > 5 %}
          {% assign total_slides = 5 %}{% endif %}
        {% for i in (1..total_slides) %}
          <div class="pagination-bar {% if forloop.first %}pagination-active{% else %}pagination-inactive{% endif %}" data-index="{{ forloop.index0 }}"></div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>


<!-- Wiertla Stats Section -->
