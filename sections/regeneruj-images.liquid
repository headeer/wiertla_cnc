<section class="wypozycz-images">
  <div class="wypozycz-images__container">
    <div class="wypozycz-images__content">
      <div class="wypozycz-images__image">
        {% if section.settings.image_1 %}
          <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="{{ section.settings.image_1_alt | default: 'Image 1' }}" width="600" height="400" loading="lazy">
        {% else %}
          <img src="{{ 'image_placeholder.svg' | asset_url }}" alt="Image placeholder" width="600" height="400" loading="lazy">
        {% endif %}
      </div>
      <div class="wypozycz-images__image">
        {% if section.settings.image_2 %}
          <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="{{ section.settings.image_2_alt | default: 'Image 2' }}" width="600" height="400" loading="lazy">
        {% else %}
          <img src="{{ 'image_placeholder.svg' | asset_url }}" alt="Image placeholder" width="600" height="400" loading="lazy">
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
.wypozycz-images {
  background: #ffffff;
  padding: 50px 0;
}

.wypozycz-images__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

.wypozycz-images__content {
  display: flex;
  gap: 50px;
  justify-content: center;
}

.wypozycz-images__image {
  flex: 1;
  width: 100%;
  height: 360px;
  background: #f5f5f5;
  border-radius: 4px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wypozycz-images__image img {
  width: 84px;
  height: 84px;
  display: block;
  object-fit: cover;
}

@media (max-width: 1024px) {
  .wypozycz-images__image {
    height: 280px;
  }
}

@media (max-width: 768px) {
  .wypozycz-images__content {
    flex-direction: column;
    gap: 30px;
  }
  
  .wypozycz-images__image {
    height: 240px;
  }
  
  .wypozycz-images {
    padding: 30px 0;
  }
}

@media (max-width: 480px) {
  .wypozycz-images__image {
    height: 200px;
  }
}
</style>

{% schema %}
{
  "name": "Regeneruj Images",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "image_1_alt",
      "label": "Image 1 Alt Text",
      "default": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "image_2_alt",
      "label": "Image 2 Alt Text",
      "default": "Image 2"
    }
  ]
}
{% endschema %} 