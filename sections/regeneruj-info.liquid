<style>
.wypozycz-info {
  background: #ffffff;
  padding: 0 0 60px 0;
}

.wypozycz-info__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

.wypozycz-info__row {
  margin-bottom: 40px;
}

.wypozycz-info__row--full {
  width: 100%;
}

.wypozycz-info__row--two-columns {
  display: flex;
  gap: 40px;
}

.wypozycz-info__row--two-columns .wypozycz-info__item {
  flex: 1;
}

.wypozycz-info__header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.wypozycz-info__icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  flex-shrink: 0;
  border: 2px solid var(--body_contrast, #112832);
  background: var(--yellow, #FFE500);
  padding: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.wypozycz-info__title {
  color: var(--body_contrast, #112832);
  font-family: "League Spartan", sans-serif;
  font-size: 18px;
  font-style: normal;
  font-weight: 700;
  line-height: 16.6px;
  letter-spacing: 1.08px;
  text-transform: uppercase;
  margin: 0;
}

.wypozycz-info__content {
  color: var(--body_contrast, #112832);
  font-family: "Montserrat", sans-serif;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 22px;
  letter-spacing: 0.48px;
}

.wypozycz-info__content p {
  margin: 0;
}

@media (max-width: 768px) {
  .wypozycz-info__row--two-columns {
    flex-direction: column;
    gap: 20px;
  }
  
  .wypozycz-info__row {
    margin-bottom: 30px;
  }
  
  .wypozycz-info__title {
    font-size: 16px;
    line-height: 18px;
  }
  
  .wypozycz-info__content {
    font-size: 14px;
    line-height: 20px;
  }
}
</style>

