{%- comment -%}
  Wiertla Logos Component
  A component to display partner or brand logos for the Wiertla CNC Shopify theme.
{%- endcomment -%}

<div class="wiertla-logos">
  <div class="wiertla-logos__container">
    <div class="wiertla-logos__grid">
      <span class="wiertla-logos__brand sandvik">SANDVIK</span>
      <div class="wiertla-logos__separator"></div>
      <span class="wiertla-logos__brand seco">SECO</span>
      <div class="wiertla-logos__separator"></div>
      <span class="wiertla-logos__brand walter">WALTER</span>
      <div class="wiertla-logos__separator"></div>
      <span class="wiertla-logos__brand kennametal">KENNAMETAL</span>
      <div class="wiertla-logos__separator"></div>
      <span class="wiertla-logos__brand iscar">ISCAR</span>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.wiertla_logos.name",
  "settings": [],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "text",
          "id": "logo_alt_text",
          "label": "Logo Alt Text",
          "default": "Partner Brand"
        },
        {
          "type": "checkbox",
          "id": "open_in_new_tab",
          "label": "Open in new tab",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.wiertla_logos.presets.name",
      "category": "t:sections.wiertla_logos.presets.category"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.wiertla-logos {
  padding-top: 30px;
}

.wiertla-logos__container {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 1420px;
  margin: 0 auto;
  padding: 0 64px;
}

.wiertla-logos__grid {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.wiertla-logos__brand {
  font-family: "League Spartan";
  font-weight: 700;
  font-size: 24px;
  line-height: 100%;
  letter-spacing: 3%;
  text-transform: uppercase;
}

.wiertla-logos__brand.sandvik {
  color: #F0161D;
}

.wiertla-logos__brand.seco {
  color: #3A63B1;
}

.wiertla-logos__brand.walter {
  color: #515151;
}

.wiertla-logos__brand.kennametal {
  color: #112832;
}

.wiertla-logos__brand.iscar {
  color: #4473BC;
}

.wiertla-logos__separator {
  height: 2px;
  width: 160px;
  flex-shrink: 0;
  background-color: var(--color-gray-100);
}

@media (max-width: 768px) {
  .wiertla-logos__container {
    padding: 0 32px;
  }
  
  .wiertla-logos__grid {
    gap: 20px;
  }
  
  .wiertla-logos__separator {
    width: 100px;
  }
}
{% endstylesheet %} 