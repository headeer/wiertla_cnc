{% stylesheet %}
.wiertla-stats {
  background-color: #F5F5F8;
  padding: 60px 0;
}

.wiertla-stats__container {
  max-width: 1420px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  gap: 20px;
}

.wiertla-stats__item {
  display: flex;
  align-items: center;
  gap: 20px;
}

.wiertla-stats__icon {
  width: 128px;
  height: 128px;
  flex-shrink: 0;
  object-fit: cover;
}

.wiertla-stats__content {
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 320px;
}

.wiertla-stats__title {
  font-family: "League Spartan";
  font-size: 18px;
  font-weight: 700;
  line-height: 17px;
  letter-spacing: 0.06em;
  text-transform: uppercase;
}

