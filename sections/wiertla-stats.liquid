<script>
document.addEventListener('DOMContentLoaded', function() {
  new Swiper('.latest-products__swiper', {
    loop: false,
    slidesPerView: 1,
    spaceBetween: 20,
    watchOverflow: true,
    observer: true,
    observeParents: true,
    
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
      1280: {
        slidesPerView: 4,
      },
      1536: {
        slidesPerView: 5,
      }
    },
    
    on: {
      init: function() {
        updatePaginationBars(this.realIndex);
      },
      slideChange: function() {
        updatePaginationBars(this.realIndex);
      }
    }
  });

  function updatePaginationBars(activeIndex) {
    const paginationBars = document.querySelectorAll('.pagination-bar');
    paginationBars.forEach((bar, index) => {
      if (index === activeIndex) {
        bar.classList.add('pagination-active');
        bar.classList.remove('pagination-inactive');
      } else {
        bar.classList.add('pagination-inactive');
        bar.classList.remove('pagination-active');
      }
    });
  }

  const paginationBars = document.querySelectorAll('.pagination-bar');
  paginationBars.forEach((bar) => {
    bar.addEventListener('click', () => {
      const index = parseInt(bar.getAttribute('data-index'));
      const swiper = document.querySelector('.latest-products__swiper').swiper;
      if (swiper) {
        swiper.slideTo(index);
      }
    });
  });
});
</script> 