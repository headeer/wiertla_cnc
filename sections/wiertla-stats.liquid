<!-- Latest Products Section -->
<div class="latest-products">
  <div class="latest-products__title">
    {{ 'wiertla_stats.latest_products.title' | t }}
  </div>
  <div class="latest-products__subtitle">
    {{ 'wiertla_stats.latest_products.subtitle' | t }}
  </div>
  
  <div class="latest-products__swiper swiper">
    <div class="swiper-wrapper">
      {% assign all_products = collections.all.products | sort: 'created_at' | reverse %}
      {% for product in all_products limit: 8 %}
        <div class="swiper-slide">
          <a href="{{ product.url }}" class="product-card">
            <div class="product-card__top">
              <div class="product-card__image-container">
                <img 
                  src="{{ product.featured_image | img_url: '68x68', crop: 'center' }}" 
                  alt="{{ product.title }}"
                  class="product-card__image"
                  width="34"
                  height="34"
                  loading="lazy"
                >
              </div>
              <div class="product-card__fi">
                fi ⌀ {{ product.metafields.custom.fi | default: 'N/A' }}
              </div>
              <div class="product-card__dimension">
                {{ product.metafields.custom.dimension | default: 'N/A' }}
              </div>
            </div>
            
            <div class="product-card__symbol">
              {{ product.metafields.custom.symbol | default: product.sku | default: 'N/A' }}
            </div>
            
            <div class="product-card__bottom">
              <div class="product-card__vendor">
                {{ product.vendor }}
              </div>
              <div class="product-card__price-container">
                <div class="product-card__price">
                  {% if product.price_varies %}
                    {{ product.price_min | money }}
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>
                {% if product.metafields.custom.rent_tool %}
                  <div class="product-card__rent">
                    {{ 'wiertla_stats.rent_tool_text' | t }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="12" viewBox="0 0 17 12" fill="none">
                      <path d="M10.5 12L9.1 10.55L12.65 7H0.5V5H12.65L9.1 1.45L10.5 0L16.5 6L10.5 12Z" fill="#112832"/>
                    </svg>
                  </div>
                {% endif %}
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
    
    <div class="swiper-navigation">
      <div class="swiper-button-prev"></div>
      <div class="pagination-container">
        {% assign total_slides = all_products.size %}
        {% if total_slides > 5 %}{% assign total_slides = 5 %}{% endif %}
        {% for i in (1..total_slides) %}
          <div class="pagination-bar {% if forloop.first %}pagination-active{% else %}pagination-inactive{% endif %}" data-index="{{ forloop.index0 }}"></div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</div>

