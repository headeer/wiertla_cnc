<div class="product-breadcrumbs-wrapper">
  <div class="product-breadcrumbs">
    <a href="/" class="product-breadcrumbs__link">Strona główna</a>
    <span class="product-breadcrumbs__separator">/</span>
    <span class="product-breadcrumbs__current">WYPOŻYCZ</span>
  </div>
</div>

<section class="wypozycz-hero">
  <div class="wypozycz-hero__container">
    <div class="wypozycz-hero__content">
      <div class="wypozycz-hero__left">
        <h1 class="wypozycz-hero__title">
          {{ section.settings.main_title | default: 'WypoŻYCZ wiertła CNC dla Twojej firmy' }}
        </h1>
      </div>
      <div class="wypozycz-hero__right">
        <h2 class="wypozycz-hero__subtitle">
          {{ section.settings.subtitle | default: 'WYPOżycz narzędzia cnc' }}
        </h2>
        <div class="wypozycz-hero__description">
          <p>{{ section.settings.description | default: 'Innowacyjna oferta dla branży CNC. <strong>Wypożyczalnia Narzędzi CNC</strong> to sposób na optymalizację kosztów, a także oszczędność czasu, wynikająca z szerokiej gamy ofertowej marki Wiertla-CNC.com' }}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.product-breadcrumbs-wrapper {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

.product-breadcrumbs {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 20px;
}

.product-breadcrumbs__link {
  font-family: "Montserrat", sans-serif;
  font-weight: 700;
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.01em;
  text-decoration: underline;
  text-decoration-style: solid;
  text-decoration-offset: 0%;
  text-decoration-thickness: 0%;
  color: #112832;
  text-decoration: none;
}

.product-breadcrumbs__separator {
  font-family: "Montserrat", sans-serif;
  font-weight: 700;
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.01em;
  color: #112832;
}

.product-breadcrumbs__current {
  font-family: "Montserrat", sans-serif;
  font-weight: 700;
  font-size: 12px;
  line-height: 16px;
  letter-spacing: 0.01em;
  color: #112832;
}

.wypozycz-hero {
  background: #F5F5F8;
  padding: 60px 0;
}

.wypozycz-hero__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.wypozycz-hero__content {
  display: flex;
  gap: 40px;
  align-items: flex-start;
}

.wypozycz-hero__left,
.wypozycz-hero__right {
  flex: 1;
}

.wypozycz-hero__title {
  font-family: 'League Spartan', sans-serif;
  font-weight: 700;
  font-size: 52px;
  line-height: 100%;
  letter-spacing: 0%;
  text-transform: uppercase;
  color: #112832;
  margin: 0;
}

.wypozycz-hero__subtitle {
  font-family: 'League Spartan', sans-serif;
  font-weight: 700;
  font-size: 18px;
  line-height: 24px;
  letter-spacing: 6%;
  text-transform: uppercase;
  color: #112832;
  margin: 0 0 15px 0;
}

.wypozycz-hero__description {
  font-family: 'Montserrat', sans-serif;
  font-weight: 500;
  font-size: 16px;
  line-height: 22px;
  letter-spacing: 3%;
  color: #112832;
}

.wypozycz-hero__description p {
  margin: 0;
}

@media (max-width: 768px) {
  .wypozycz-hero__content {
    flex-direction: column;
    gap: 20px;
  }
  
  .wypozycz-hero__title {
    font-size: 32px;
  }
  
  .wypozycz-hero {
    padding: 40px 0;
  }
}
</style>

{% schema %}
{
  "name": "Wypożycz Hero",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "WypoŻYCZ wiertła CNC dla Twojej firmy"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "WYPOżycz narzędzia cnc"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Innowacyjna oferta dla branży CNC. <strong>Wypożyczalnia Narzędzi CNC</strong> to sposób na optymalizację kosztów, a także oszczędność czasu, wynikająca z szerokiej gamy ofertowej marki Wiertla-CNC.com</p>"
    }
  ]
}
{% endschema %} 