<!-- Filter Modal -->
<div class="wiertla-categories__modal" id="filterModal">
  <div class="wiertla-categories__modal-content">
    <div class="wiertla-categories__modal-header">
      <h3>Filtruj wiertła w tabeli</h3>
      <button class="wiertla-categories__modal-close">&times;</button>
    </div>
    <div class="wiertla-categories__modal-body">
      <div class="wiertla-categories__modal-filters">
        <div class="wiertla-categories__modal-filter-group">
          <label>Typ wiertła</label>
          <select class="wiertla-categories__filter" data-filter="type">
            <option value="">Wszystkie</option>
            <option value="VW">Koronkowe (VW)</option>
            <option value="PR">Płytkowe (PR)</option>
            <option value="WW">VHM (WW)</option>
            <option value="PS">Sandvik 880 (PS)</option>
            <option value="WK">KSEM (WK)</option>
            <option value="WV">AMEC (WV)</option>
          </select>
        </div>
        <div class="wiertla-categories__modal-filter-group">
          <label>Wykaz koronek</label>
          <select class="wiertla-categories__filter" data-filter="crown">
            <option value="">Wszystkie</option>
            <option value="KK">KK</option>
            <option value="KI">KI</option>
            <option value="KS">KS</option>
            <option value="KT">KT</option>
            <option value="KA">KA</option>
          </select>
        </div>
        <div class="wiertla-categories__modal-filter-group">
          <label>Producent</label>
          <select class="wiertla-categories__filter" data-filter="manufacturer">
            <option value="">Wszystkie</option>
            <option value="Sandvik">Sandvik</option>
            <option value="AMEC">AMEC</option>
            <option value="KSEM">KSEM</option>
          </select>
        </div>
      </div>
    </div>
    <div class="wiertla-categories__modal-footer">
      <button class="wiertla-categories__modal-apply">Zastosuj</button>
      <button class="wiertla-categories__modal-reset">Resetuj</button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add event listeners to language buttons
    document.querySelectorAll('.wiertla-categories__language-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const lang = this.getAttribute('data-lang');
        if (window.WiertlaCNC && window.WiertlaCNC.changeLanguage) {
          window.WiertlaCNC.changeLanguage(lang);
        }
      });
    });

    // Modal functionality
    const modal = document.getElementById('filterModal');
    const filterBtn = document.querySelector('.wiertla-categories__filter-btn');
    const closeBtn = document.querySelector('.wiertla-categories__modal-close');
    const applyBtn = document.querySelector('.wiertla-categories__modal-apply');
    const resetBtn = document.querySelector('.wiertla-categories__modal-reset');

    if (filterBtn && modal) {
      filterBtn.addEventListener('click', function() {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }

    if (closeBtn && modal) {
      closeBtn.addEventListener('click', function() {
        modal.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    if (applyBtn) {
      applyBtn.addEventListener('click', function() {
        // Apply filters logic here
        modal.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    if (resetBtn) {
      resetBtn.addEventListener('click', function() {
        // Reset filters logic here
        const filters = modal.querySelectorAll('.wiertla-categories__filter');
        filters.forEach(filter => {
          filter.value = '';
        });
      });
    }

    // Close modal when clicking outside
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    }
  });
</script>

