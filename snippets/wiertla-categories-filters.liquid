    </div>
  </div>
</div>

<script>
  console.log('=== WIERTLA FILTERS SCRIPT LOADED ===');
  console.log('Current URL:', window.location.href);
  console.log('DOM ready state:', document.readyState);
  
  document.addEventListener('DOMContentLoaded', function() {
    console.log('=== DOM CONTENT LOADED EVENT FIRED ===');
    
    // Add event listeners to language buttons
    document.querySelectorAll('.wiertla-categories__language-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        const lang = this.getAttribute('data-lang');
        if (window.WiertlaCNC && window.WiertlaCNC.changeLanguage) {
          window.WiertlaCNC.changeLanguage(lang);
        }
      });
    });

    // Modal functionality
    const modal = document.getElementById('filterModal');
    const filterBtn = document.querySelector('.wiertla-categories__filter-btn');
    const closeBtn = document.querySelector('.wiertla-categories__modal-close');
    const applyBtn = document.querySelector('.wiertla-categories__modal-apply');
    const resetBtn = document.querySelector('.wiertla-categories__modal-reset');

    if (filterBtn && modal) {
      filterBtn.addEventListener('click', function() {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }

    if (closeBtn && modal) {
      closeBtn.addEventListener('click', function() {
        modal.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    if (applyBtn) {
      applyBtn.addEventListener('click', function() {
        // Apply filters logic here
        modal.classList.remove('active');
        document.body.style.overflow = '';
      });
    }

    if (resetBtn) {
      resetBtn.addEventListener('click', function() {
        // Reset filters logic here
        const filters = modal.querySelectorAll('.wiertla-categories__filter');
        filters.forEach(filter => {
          filter.value = '';
        });
      });
    }

    // Close modal when clicking outside
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          modal.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    }

    // Tab-specific producer filter logic
    function updateProducerOptions(tabType) {
      document.querySelectorAll('.wiertla-categories__filter[data-filter="manufacturer"]').forEach(function(select) {
        select.querySelectorAll('option').forEach(function(opt) {
          if (!opt.className || opt.value === "") {
            opt.style.display = '';
            return;
          }
          if (
            (tabType === 'wiertla' && opt.classList.contains('producer-wiertla')) ||
            (tabType === 'plytki' && opt.classList.contains('producer-plytki')) ||
            (tabType === 'koronki' && opt.classList.contains('producer-koronki'))
          ) {
            opt.style.display = '';
          } else {
            opt.style.display = 'none';
          }
        });
        // Reset value if current option is hidden
        if (select.selectedOptions.length && select.selectedOptions[0].style.display === 'none') {
          select.value = '';
        }
      });
    }

    // Listen for tab changes
    function setupProducerTabSync() {
      document.querySelectorAll('.wiertla-categories__tab').forEach(function(tab) {
        tab.addEventListener('click', function() {
          var tabType = this.getAttribute('data-tab-type');
          updateProducerOptions(tabType);
        });
      });
      // On page load, set correct options
      var activeTab = document.querySelector('.wiertla-categories__tab.active');
      if (activeTab) {
        updateProducerOptions(activeTab.getAttribute('data-tab-type'));
      }
    }
    document.addEventListener('DOMContentLoaded', setupProducerTabSync);

    // Typ/Rodzaj Filter (tab-specific)
    function updateTypeRodzajDropdown(tabType) {
      console.log('updateTypeRodzajDropdown called with tabType:', tabType);
      
      document.querySelectorAll('.wiertla-filter-type, .wiertla-filter-rodzaj').forEach(function(select) {
        const selectTab = select.getAttribute('data-tab');
        const selectClass = select.className;
        console.log('Processing select:', selectClass, 'data-tab:', selectTab, 'tabType:', tabType);
        
        if (selectTab === tabType) {
          console.log('Showing filter:', selectClass);
          select.style.display = '';
        } else {
          console.log('Hiding filter:', selectClass);
          select.style.display = 'none';
          select.value = '';
        }
      });
    }
    
    // Function to update active icon based on filter selection
    function updateActiveIcon(filterValue, tabType) {
      console.log('updateActiveIcon called with filterValue:', filterValue, 'tabType:', tabType);
      
      // Remove active class from all icons
      document.querySelectorAll('.wiertla-categories__icon-item').forEach(function(icon) {
        icon.classList.remove('active');
      });
      
      if (filterValue && filterValue !== '') {
        // Convert filter value to match data-category format
        const categoryValue = filterValue.toLowerCase();
        
        // Find the corresponding icon and make it active
        let targetIcon = null;
        
        // For wiertla tab, look for exact match
        if (tabType === 'wiertla') {
          targetIcon = document.querySelector(`.wiertla-categories__icon-item[data-category="${categoryValue}"]`);
        }
        // For plytki/koronki tabs, look for exact match
        else {
          targetIcon = document.querySelector(`.wiertla-categories__icon-item[data-category="${categoryValue}"]`);
        }
        
        if (targetIcon) {
          targetIcon.classList.add('active');
          console.log('Made icon active:', categoryValue);
        } else {
          console.log('No matching icon found for category:', categoryValue);
        }
      } else {
        // If no filter selected, make "wszystkie" active
        const allIcon = document.querySelector('.wiertla-categories__icon-item[data-category="wszystkie"]');
        if (allIcon) {
          allIcon.classList.add('active');
          console.log('Made "wszystkie" icon active');
        }
      }
    }
    
    // Function to setup filter change listeners
    function setupFilterIconSync() {
      console.log('Setting up filter-icon sync');
      
      // Listen for changes on typ wiertła filter
      document.querySelectorAll('.wiertla-filter-type').forEach(function(select) {
        select.addEventListener('change', function() {
          const tabType = this.getAttribute('data-tab');
          const filterValue = this.value;
          console.log('Typ filter changed:', filterValue, 'for tab:', tabType);
          updateActiveIcon(filterValue, tabType);
        });
      });
      
      // Listen for changes on rodzaj filters
      document.querySelectorAll('.wiertla-filter-rodzaj').forEach(function(select) {
        select.addEventListener('change', function() {
          const tabType = this.getAttribute('data-tab');
          const filterValue = this.value;
          console.log('Rodzaj filter changed:', filterValue, 'for tab:', tabType);
          updateActiveIcon(filterValue, tabType);
        });
      });
    }
    
    // Make function available globally for debugging
    window.testFilterSwitch = function(tabType) {
      console.log('=== Manual Test: Switching to tab type:', tabType, '===');
      updateTypeRodzajDropdown(tabType);
    };
    
    window.testIconSync = function(filterValue, tabType) {
      console.log('=== Manual Test: Setting icon for filter:', filterValue, 'tab:', tabType, '===');
      updateActiveIcon(filterValue, tabType);
    };
    
    console.log('Setting up tab event listeners');
    
    // Debug: Log all available filters
    console.log('=== Available Filters Debug ===');
    document.querySelectorAll('.wiertla-filter-type, .wiertla-filter-rodzaj').forEach(function(select, index) {
      console.log(`Filter ${index + 1}:`, {
        className: select.className,
        dataTab: select.getAttribute('data-tab'),
        dataFilter: select.getAttribute('data-filter'),
        display: select.style.display || 'default',
        visible: select.offsetWidth > 0 && select.offsetHeight > 0
      });
    });
    console.log('=== End Filters Debug ===');
    
    // Debug: Log all available icons
    console.log('=== Available Icons Debug ===');
    document.querySelectorAll('.wiertla-categories__icon-item').forEach(function(icon, index) {
      console.log(`Icon ${index + 1}:`, {
        category: icon.getAttribute('data-category'),
        tab: icon.getAttribute('data-tab'),
        classList: icon.className,
        text: icon.querySelector('.wiertla-categories__icon-label')?.textContent?.trim()
      });
    });
    console.log('=== End Icons Debug ===');
    
    console.log('=== Looking for tabs ===');
    const tabs = document.querySelectorAll('.wiertla-categories__tab');
    console.log('Found', tabs.length, 'tabs');
    
    tabs.forEach(function(tab, index) {
      console.log(`Tab ${index + 1}:`, {
        text: tab.textContent.trim(),
        dataTabType: tab.getAttribute('data-tab-type'),
        classList: tab.className,
        isActive: tab.classList.contains('active')
      });
      
      tab.addEventListener('click', function() {
        var tabType = this.getAttribute('data-tab-type');
        console.log('=== TAB CLICKED ===');
        console.log('Tab clicked:', this.textContent.trim(), 'tabType:', tabType);
        
        // CRITICAL: Reset selectedCategory when switching tabs
        window.selectedCategory = 'wszystkie';
        
        updateTypeRodzajDropdown(tabType);
        updateMobileTypeRodzajDropdown(tabType);
        
        // Reset to "wszystkie" when switching tabs
        updateActiveIcon('', tabType);
        
        // Also call the main reset function if available
        if (typeof window.resetCategoriesOnTabSwitch === 'function') {
          window.resetCategoriesOnTabSwitch(tabType);
        }
      });
    });
    
    // Mobile filter synchronization functions
    function updateMobileTypeRodzajDropdown(tabType) {
      console.log('updateMobileTypeRodzajDropdown called with tabType:', tabType);
      
      document.querySelectorAll('.wiertla-filter-type, .wiertla-filter-rodzaj').forEach(function(select) {
        const selectTab = select.getAttribute('data-tab');
        const selectClass = select.className;
        console.log('Processing mobile select:', selectClass, 'data-tab:', selectTab, 'tabType:', tabType);
        
        if (selectTab === tabType) {
          console.log('Showing mobile filter:', selectClass);
          select.style.display = '';
          
          // Safely check and update parent dropdown container
          const parentDropdown = select.closest('.wiertla-categories__mobile-filter-dropdown');
          if (parentDropdown) {
            parentDropdown.style.display = '';
          }
        } else {
          console.log('Hiding mobile filter:', selectClass);
          select.style.display = 'none';
          select.value = '';
          
          // Safely check and update parent dropdown container
          const parentDropdown = select.closest('.wiertla-categories__mobile-filter-dropdown');
          if (parentDropdown) {
            parentDropdown.style.display = 'none';
          }
        }
      });
    }
    
    function setupMobileFilterSync() {
      console.log('Setting up mobile filter sync');
      
      // Listen for changes on mobile typ wiertła filter
      document.querySelectorAll('.wiertla-categories__mobile-filter-select[data-filter="typ"]').forEach(function(select) {
        select.addEventListener('change', function() {
          const tabType = this.getAttribute('data-tab');
          const filterValue = this.value;
          console.log('Mobile typ filter changed:', filterValue, 'for tab:', tabType);
          updateActiveIcon(filterValue, tabType);
          
          // Sync with category selection
          if (typeof window.filterByCategory === 'function') {
            window.filterByCategory(filterValue || 'wszystkie');
          }
        });
      });
      
      // Listen for changes on mobile rodzaj filters
      document.querySelectorAll('.wiertla-categories__mobile-filter-select[data-filter="rodzaj"]').forEach(function(select) {
        select.addEventListener('change', function() {
          const tabType = this.getAttribute('data-tab');
          const filterValue = this.value;
          console.log('Mobile rodzaj filter changed:', filterValue, 'for tab:', tabType);
          updateActiveIcon(filterValue, tabType);
          
          // Sync with category selection
          if (typeof window.filterByCategory === 'function') {
            window.filterByCategory(filterValue || 'wszystkie');
          }
        });
      });
      
